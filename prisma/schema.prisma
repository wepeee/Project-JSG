// material / bahan baku

model Material {
  id               Int               @id @default(autoincrement())
  name             String            @unique
  uom              String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  proStepMaterials ProStepMaterial[]
}

enum ProStatus {
  OPEN
  IN_PROGRESS
  DONE
  CANCELLED
}

model Process {
  id   Int    @id @default(autoincrement())
  code String @unique @db.VarChar(2) // WAJIB 2 digit: "11"
  name String @unique

  pros Pro[]
}

model ProSequence {
  // prefix = (processCode 2 digit) + (MM 2 digit) + (YY 2 digit) = 6 digit
  prefix String @id @db.VarChar(6)
  last   Int
}

enum ProType {
  PAPER
  RIGID
  OTHER
}

model Pro {
  id          Int       @id @default(autoincrement())
  proNumber   String    @unique @db.VarChar(9)
  productName String
  qtyPoPcs    Int
  startDate   DateTime?
  status      ProStatus @default(OPEN)
  type        ProType   @default(PAPER)

  autoShiftExpansion Boolean @default(false)

  // Flag untuk menandai PRO dibuat dengan otomatisasi shift

  processId Int?
  process   Process? @relation(fields: [processId], references: [id])

  steps ProStep[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProStep {
  id    Int @id @default(autoincrement())
  proId Int
  pro   Pro @relation(fields: [proId], references: [id], onDelete: Cascade)

  orderNo Int // 1,2,3...

  up              Int?
  estimatedShifts Int?

  startDate DateTime?

  machineId Int?
  machine   Machine? @relation(fields: [machineId], references: [id])

  partNumber String?

  // --- Target / Standards (for Reporting) ---
  manPowerStd Int?
  cycleTimeStd Decimal? @db.Decimal(10, 2)
  cavityStd   Int?

  materials         ProStepMaterial[]
  productionReports ProductionReport[]

  @@unique([proId, orderNo])
  @@index([proId])
}

model ProStepMaterial {
  id     Int     @id @default(autoincrement())
  stepId Int
  step   ProStep @relation(fields: [stepId], references: [id], onDelete: Cascade)

  materialId Int
  material   Material @relation(fields: [materialId], references: [id])

  qtyReq Decimal @db.Decimal(12, 3)
  // --- Laporan Produksi Harian (LPH) ---

  @@unique([stepId, materialId])
  @@index([stepId])
}

enum LphType {
  PAPER
  PRINTING
  PACKING_ASSEMBLY // Packing & Assembly merged as per excel structure
  BLOW_MOULDING
  INJECTION
}

model ProductionReport {
  id String @id @default(cuid())

  // Header Info
  proStepId Int
  step      ProStep @relation(fields: [proStepId], references: [id])

  reportDate DateTime // Tanggal Laporan
  shift      Int // 1, 2, 3

  operatorName String

  reportType LphType

  // Common Time
  startTime DateTime? // Jam Mulai
  endTime   DateTime? // Jam Selesai

  // --- Rigid Specific Header ---
  batchNo String? // Batch No (Rigid)

  // --- Resources (Rigid) ---
  manPowerStd Int? // MP Std
  manPowerAct Int? // MP Actual

  cycleTimeStd Decimal? // CT Std (Detik)
  cycleTimeAct Decimal? // CT Actual (Detik)

  cavityStd Int? // Cavity Std (Blow/Injection)
  cavityAct Int? // Cavity Actual (Blow/Injection)

  // --- Material Usage ---
  // Paper: "Input Material"
  // Rigid (Blow/Inj): "Total Material Tuang", "Gulungan/Cucian", "Runner"
  inputMaterialQty  Decimal? @default(0) // Paper: Input Material, Rigid: Material Tuang
  materialRunnerQty Decimal? @default(0) // Rigid: PT/Runner
  materialPurgeQty  Decimal? @default(0) // Rigid: Gulungan/Cucian

  // --- Output Results ---
  qtyPassOn Decimal? @default(0)
  qtyHold   Decimal? @default(0)
  qtyWip    Decimal? @default(0)

  qtyGood   Decimal @default(0) // Finish Good / Total Output / Output Baik
  qtyReject Decimal @default(0) // Total Reject

  // --- Reject Details (JSON) ---
  // Store dynamic columns like "Bintik", "Warna", "Baret", etc.
  // Format: { "bintik": 10, "warna": 5, ... }
  rejectBreakdown Json?

  // --- Downtime Details (JSON) ---
  // Store dynamic columns like "Tunggu Approval", "Setup", "Machine Problem"
  // Format: { "setup": 30, "no_order": 60, ... }
  downtimeBreakdown Json?

  totalDowntime Int @default(0) // Total menit downtime

  // --- Notes ---
  notes String? @db.Text

  // Meta data for calculated fields snapshots if needed (OEE, %, etc) or extra columns
  metaData Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([proStepId])
  @@index([reportDate])
}
